spring.application.name=sigma

# Porta do servidor (Railway usa variável de ambiente PORT)
server.port=${PORT:8080}

# Configurações do Banco de Dados
# No Railway, configure estas variáveis de ambiente:
# DATABASE_URL, DATABASE_USERNAME, DATABASE_PASSWORD
spring.datasource.url=${DATABASE_URL:jdbc:mysql://localhost:3306/SIGMA?createDatabaseIfNotExist=true&serverTimezone=UTC&useSSL=false&characterEncoding=UTF-8&allowPublicKeyRetrieval=true}
spring.datasource.username=${DATABASE_USERNAME:root}
spring.datasource.password=${DATABASE_PASSWORD:1234sigma!}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Desabilitar logs de debug em produção
logging.level.org.springframework.security=INFO
logging.level.root=INFO

# ===============================================
# CONFIGURAÇÕES DE SEGURANÇA JWT
# ===============================================

# Chave secreta para assinar os tokens
# No Railway, configure a variável JWT_SECRET_KEY
application.security.jwt.secret-key=${JWT_SECRET_KEY:30bbab3fdb5fbf587f109bc3ec67d0dbf290df1f62bcb98e2b06c310b1e5485a}

# Tempo de expiração do token de acesso (em milissegundos)
# 86400000 = 24 horas
application.security.jwt.expiration=86400000

# Tempo de expiração do refresh token
# 604800000 = 7 dias
application.security.jwt.refresh-token.expiration=604800000

# Configurações de CORS
# No Railway, configure a variável FRONTEND_URL com a URL do Vercel
spring.web.cors.allowed-origins=${FRONTEND_URL:http://localhost:5173}
