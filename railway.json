{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd Backend/sigma && ./mvnw clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "cd Backend/sigma && java -Dserver.port=$PORT -Dspring.profiles.active=railway -jar target/sigma-backend.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
